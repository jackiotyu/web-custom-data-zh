{
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true, // 启用导入 JSON 文件功能
        "strict": true   /* enable all strict type-checking options */
    },
    "include": [
        "src/**/*",
    ]
}